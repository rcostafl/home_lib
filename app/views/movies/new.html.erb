
<div style="position: relative">
    <div class="outside-square d-flex">
        <div>
            <% if @movie.image_link.nil? %>
                
                <%= image_tag(Movie.get_default_image_link, :alt => @movie.title) %>
                
            <%else%>
                <%= image_tag(Movie.image_link, :alt => @movie.title)%>
            <%end%>
        </div>
        <div>
            <%= simple_form_for(@movie) do |f| %>
                <div class="row">
                    <div class="col-sm-5">
                        <%= f.input :title, label: 'TÃ­tulo:', autofocus: true, input_html:{class: "form-control"} %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <%= f.input :director, label: 'Diretor: ', input_html:{class: "form-control"} %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <%= f.association :shelf,
                            as: :select,
                            label: 'prateleira',
                            input_html: {class: "form-control"} %>
                    </div>
                </div>
                <div class="row">        
                    <div class="col-sm-5">
                        <%= f.input :image_link, label: 'Imagem (link): ',
                        input_html: {class: "form-control"}%>
                    </div>
                </div>
                <div class="row d-flex mt-2">        
                    <div class="col-sm-5 d-flex">
                        <%= f.button :button, type:"reset", value: "Limpar", class:"btn btn-outline-dark btn-sm", style:"width: 168px;" do %> Limpar <% end %>
                        <%= f.submit value: "Salvar", class:"btn btn-outline-dark btn-sm", style:"width: 168px;"%>
                    </div>            
                </div>
            
            <% end %>
        </div>
    </div>
</div>