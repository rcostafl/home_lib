
<div class="outside-square d-flex">
    <div>
        <img src="https://br.web.img3.acsta.net/c_310_420/medias/nmedia/18/90/93/20/20120876.jpg">
    </div>
    <div>
        <%= simple_form_for(@movie) do |f| %>
            <div class="row">
                <div class="col-lg-5">
                    <%= f.input :title, label: 'TÃ­tulo:', autofocus: true, input_html:{class: "form-control"} %>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5">
                    <%= f.input :director, label: 'Diretor: ', input_html:{class: "form-control"} %>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5">
                    <%= f.association :shelf,
                        as: :select,
                        label: 'prateleira',
                        input_html: {class: "form-control"} %>
                </div>
            </div>
            <div class="row">        
                <div class="col-lg-5">
                    <%= f.input :image_link, label: 'Imagem (link): ',
                    input_html: {class: "form-control"}%>
                </div>
            </div>
            <div class="row d-flex">        
                <div class="col-lg-5">
                    <span>
                        <%= f.button :button, type:"reset", value: "Limpar", class:"btn-text-lightblue-rfb", style:"width: 168px;" do %> Limpar <% end %>
                    </span>
                    <span>
                        <%= f.submit value: "Salvar", class:"btn-text-blue-rfb", style:"width: 168px;"%>
                    </span>
                </div>            
            </div>
        
        <% end %>
    </div>
</div>